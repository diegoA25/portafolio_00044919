#include <iostream>
using namespace std;

void calculos (int num, int *doble, int *triple){
	*doble - 2 * num;
	*triple - 3 * num;
}

int main (){
	int numero = 2, doble = 0, triple = 0;
	calculos(numero; &doble, &triple);

	cout<<"El doble de 2 es "<<doble<<endl;
	cout<<"El triple de 2 es "<<triple<<endl;
	
	cout<<"La direccion de memoria de doble es: "<<&doble<<endl;
	cout<<"La direccion de memoria de triple es: "<<&triple<<endl

	cout<<"El contenido del puntero doble es: "<<(*doble)<<endl;
	cout<<"El contenido del puntero triple es: "<<(*triple)<<endl;

	return 0;
}
/* En la funcion se esta haciendo el calculo del doble y el triple del numero que se almacenan en los punteros *doble y *triple; el valor que se envia a la funcion es el valor del numero el cual es declarado en el main o en otro caso podria pedirse al usuario que digite el numero; despues en la funcion main cuando es llamada la funcion se le agregan el valor del numero y la direccion del contenido de doble y triple los cuales se almacenan en los punteros doble y triple de la funcion para despues solo imprimir su contenido.*/

/*la utilidad de los punteros es la de dinamizar el movimiento de contenido en el codigo para facilitar el uso de dicho codigo. */
